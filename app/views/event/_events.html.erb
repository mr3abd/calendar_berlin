<div class="album py-5 bg-light">
  <div class="container">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% events.each do |event|  %>
        <div class="col">
          <div class="card shadow-sm">
            <img src=<%=event.image_url %> , class="bd-placeholder-img card-img-top"  width="100%" height="225">

            <div class="card-body">
              <h1 class="fw-light"> <%= event.title %></h1>

              <p class="card-text">
                <strong>Dates:</strong> <%=event.full_dates %>
              </p>
              <p class="card-text">
                <strong>Category:</strong> <%=event.category.title %>
              </p>
              <p class="card-text">
                <strong>Location:</strong> <%=event.location.title %>
              </p>
              <p class="card-text">
                <strong>DataSource:</strong> <%=event.data_source.title %>
              </p>



              <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted"> <%=time_ago_in_words(event.created_at) %></small>
                <a href="<%= event.url %>" class="btn btn-primary">Book Now</a>

              </div>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>

